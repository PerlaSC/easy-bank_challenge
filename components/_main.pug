mixin features(ref, icon, title, text)
  article
    a(href=""+ref class=""+icon)
    h4 
    p

mixin articles(img, p, h4, p)
  article
  img(src="", alt="")
  p
  h4
  p

main
  section.landing
    .landing__text
     h1  Next generation digital banking
      p Take your financial life online. Your Easybank account will be a one-stop-shop for spending, saving, budgeting, investing, and much more. 
      button.button Request Invite
    .landing__img
      img(src="images/bg-intro-mobile.svg", alt="")
  section.feature
    .feature__text
      h2 Why choose Easybank?
      p  We leverage Open Banking to turn your bank account into your financial hub. Control your finances like never before.
    .feature__articles
      +features('i', 'Online Banking', 'Our modern web and mobile applications allow you to keep track of your finances wherever you are in the world.')
  section.secction__articles
    .articles__title
      h2  Latest Articles 
    .articles
      +articles
